<div class="container">
  <div class="row text-center">
    <h1>Edit Wiki</h1>
  </div>
  <div class="row">
    <div class="col-md-6">
      <%= render partial: "form", locals: { wiki: @wiki }  %>
    </div>
    <div class="col-md-6">
      <div class="show">
        <h1><%= @wiki.title %></h1>
        <p><%= markdown(@wiki.body) %></p>
      </div>
      <% if policy(@wiki).collaborators? %>
        <div class="panel panel-primary">
          <div class="panel-heading">
            <h3 class="panel-title">Collaborators</h3>
          </div>
          <div class="panel-body">
            <%= render partial: "collaborators", locals: { wiki: @wiki }  %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
