<div class="container" id="wiki-show">
  <div class="col-md-10 col-md-offset-1">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title"><%= @wiki.title %></h3>
      </div>
      <div class="panel-body">
        <p><%= markdown(@wiki.body) %></p>
      </div>
    </div>
  </div>
</div>
<nav class="navbar navbar-inverse navbar-fixed-bottom">
  <div class="container">
    <ul class="nav nav-tabs nav-justified">
      <li><%= link_to " Index", root_path, class: "glyphicon glyphicon-list" %></li>
      <% if policy(@wiki).update? %>
        <li><%= link_to " Edit", edit_wiki_path, class: "glyphicon glyphicon-edit" %></li>
      <% end %>
      <% if policy(@wiki).destroy? %>
        <li><%= link_to " Delete", @wiki, method: :delete, data: {confirm: 'Are you sure you want to delete this wiki?'}, class: "glyphicon glyphicon-trash" %></li>
      <% end %>
  </div>
</nav>
